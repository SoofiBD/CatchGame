            app:layout_row="1"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="TODO"
            android:onClick="increaseScore"
